# Environment configuration
# Copy this to .env and fill in your values

# ============================================
# DATABASE
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uzum_scraping
DB_USER=scraper
DB_PASSWORD=scraper123

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# PROXY CONFIGURATION (Smartproxy)
# ============================================
# Enable proxy for production scraping
PROXY_ENABLED=false

# Smartproxy credentials (get from dashboard.smartproxy.com)
# Format: user-spXXXXXX
SMARTPROXY_USER=
SMARTPROXY_PASS=

# Alternative: custom proxy pool
# PROXY_HOST=gate.smartproxy.com
# PROXY_PORT=7000
# PROXY_COUNTRY=uz

# ============================================
# SCRAPER SETTINGS
# ============================================
# Requests per minute (be respectful!)
SCRAPER_REQUESTS_PER_MINUTE=20

# Delay between requests (seconds)
SCRAPER_MIN_DELAY=2.0
SCRAPER_MAX_DELAY=5.0

# Chance of "reading pause" (human-like behavior)
SCRAPER_READING_PAUSE_CHANCE=0.1

# ============================================
# VALIDATION THRESHOLDS
# ============================================
# Alert if price drops more than this %
VALIDATION_MAX_PRICE_DROP=50

# Alert if price increases more than this %
VALIDATION_MAX_PRICE_INCREASE=200

# ============================================
# GENERAL
# ============================================
ENV=development
DEBUG=false
